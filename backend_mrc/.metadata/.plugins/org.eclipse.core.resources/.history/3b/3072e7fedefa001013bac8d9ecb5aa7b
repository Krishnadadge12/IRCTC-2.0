package com.mrc.entities.train;

import com.mrc.entities.BaseEntity;

import jakarta.persistence.AttributeOverride;
import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.EnumType;
import jakarta.persistence.Enumerated;
// import jakarta.persistence.GeneratedValue;
// import jakarta.persistence.GenerationType;
// import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;
import jakarta.persistence.Transient;
import lombok.AllArgsConstructor;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;
import lombok.ToString;

//JPA annotations
@Entity
@Table(name="coaches")
@AttributeOverride(name="id", column=@Column(name="coach_id"))

//Lombok annotations

@Getter
@Setter
@NoArgsConstructor
@AllArgsConstructor
@ToString

public class Coach extends BaseEntity {
	 
	 @Enumerated(EnumType.STRING)
	 private Tier coachType;	//SLEEPER,AC1,AC2..
	 
	 @Column(name="coach_no", length=2) 
	 private String coachNo;			//B1,B2..
	 
	 @Transient							//skip from persistence -no col generation
	 private Integer totalSeats;
	 
	 @ManyToOne
	 @JoinColumn(name="train_id", nullable=false)
	 private TrainEntity train;

	public void setAvailableSeats(Integer availableSeats) {
		// TODO Auto-generated method stub
		
	}
	 
	
}
